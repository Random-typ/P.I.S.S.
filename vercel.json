{
    "rewrites": [
        {
            "source": "/stats",
            "destination": "/stats.html"
        },
        {
            "source": "/about",
            "destination": "/about.html"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}
